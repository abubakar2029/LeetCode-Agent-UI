{
  "manifest_version": 3,
  "name": "LeetCode Agent",
  "version": "1.0",
  "description": "Daily LeetCode recommendations with GitHub analysis and integration",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "identity",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "http://localhost:8000/*"
  ]
}
